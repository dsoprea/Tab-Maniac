{
    "manifest_version": 2,
	"name": "Tab Maniac",
	"version": "0.9.7",
	"description": "Automatically backup your Chrome tabs.",
	"background": {
            "scripts": [
                    "js/jquery-1.7.2.min.js",
                    "js/db.js",
                    "js/patches.js",
                    "js/ls.js",
                    "js/extension.js"
                ]
        },
	"options_page": "options.html",
    "minimum_chrome_version": "19",
	"permissions": [
		"tabs", 
        "unlimitedStorage"
	],
	"icons": {
		"32": "images/shield-32.png",
		"48": "images/shield-48.png",
		"64": "images/shield-64.png",
		"128": "images/shield-128.png"
	}
}
